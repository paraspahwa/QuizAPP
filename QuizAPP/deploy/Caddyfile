# ─── REPLACE yourdomain.com WITH YOUR ACTUAL DOMAIN ───
# Caddy auto-provisions free Let's Encrypt SSL certificates

yourdomain.com {
    # Frontend (React app)
    reverse_proxy frontend:80

    # Backend API
    handle_path /api/* {
        reverse_proxy backend:8000
    }
}

